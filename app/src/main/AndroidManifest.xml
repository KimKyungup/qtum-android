<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.max_v.bitcoinwallet">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.CreateWalletActivity"
            android:label="@string/title_activity_create_wallet"
            android:parentActivityName=".Activities.MainActivity"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".Activities.MyWalletActivity"
            android:label="@string/title_activity_my_wallet"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".Activities.SendActivity"
            android:label="@string/send"
            android:parentActivityName=".Activities.MyWalletActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".Activities.ReceiveActivity"
            android:label="@string/recieve"
            android:parentActivityName=".Activities.MyWalletActivity"
            android:theme="@style/AppTheme">
        </activity>
        <service
            android:name=".Services.LoadingService">
        </service>
    </application>

</manifest>